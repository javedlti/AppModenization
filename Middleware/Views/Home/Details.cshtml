@model HomeDetailsViewModel
@{
    ViewBag.Title = "Employee Details";
    var photoPath = "~/images/" + (Model.Employee.PhotoPath ?? "javed.jpg");

}
<div class="row justify-content-center mt-3">
    <div class="col col-sm-8">
        <div class="card">
            <div class="card-header">
                <h5>@Model.Employee.Name</h5>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" style="width:250px" asp-append-version="true" src="@photoPath" />
                <h5>Employee ID :@Model.Employee.Id </h5>
                <h5>Employee Name :@Model.Employee.Name </h5>
                <h5>Employee ID :@Model.Employee.Email </h5>
                <h5>Employee ID :@Model.Employee.Department </h5>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-danger">Delete</a>
                <a asp-action="Edit" asp-controller="Home" asp-route-Id="@Model.Employee.Id" class="btn btn-dark">Edit</a>
            </div>
        </div>
    
   </div>
    </div>
